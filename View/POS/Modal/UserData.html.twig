<!-- Modal -->
<div class="modal fade" id="userDataModal" tabindex="-1" role="dialog" aria-labelledby="userData" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ i18n.trans('user') }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <h3>{{ fsc.user.nick }}</h3>
                    <span><i class="fa fa-user fa-3x"></i></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">{{ i18n.trans('close') }}</button>
            </div>
        </div>
    </div>
</div>